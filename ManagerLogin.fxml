<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="225.0" prefWidth="225.0" style="-fx-background-color: linear-gradient(to bottom right, #3c2a21, #1a120b);" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ManagerLoginController">
   <children>
      <!-- Wooden panel background -->
      <Rectangle arcHeight="10.0" arcWidth="10.0" fill="#1a120b" height="215.0" layoutX="5.0" layoutY="5.0" stroke="#5c4033" strokeType="INSIDE" strokeWidth="2.0" width="215.0">
         <effect>
            <DropShadow color="#00000088" radius="10" />
         </effect>
      </Rectangle>

      <!-- Status label -->
      <Label fx:id="lblStatus" alignment="CENTER" layoutX="38.0" layoutY="44.0" prefHeight="17.0" prefWidth="149.0" text="Please login as manager"
             style="-fx-text-fill: #d4a373; -fx-font-weight: bold;">
         <effect>
            <DropShadow color="#1a120b" radius="2" />
         </effect>
      </Label>

      <!-- Username field with coffee shop style -->
      <TextField fx:id="txtUsername" layoutX="38.0" layoutY="79.0" promptText="Username"
                 style="-fx-background-color: #e6d5b8; -fx-border-color: #8b5a2b; -fx-border-radius: 3; -fx-background-radius: 3; -fx-text-fill: #3c2a21; -fx-prompt-text-fill: #8b5a2b;">
         <effect>
            <InnerShadow color="#8b5a2b33" radius="2"/>
         </effect>
      </TextField>

      <!-- Password field with coffee shop style -->
      <PasswordField fx:id="txtPassword" layoutX="38.0" layoutY="117.0" promptText="Password"
                     style="-fx-background-color: #e6d5b8; -fx-border-color: #8b5a2b; -fx-border-radius: 3; -fx-background-radius: 3; -fx-text-fill: #3c2a21; -fx-prompt-text-fill: #8b5a2b;">
         <effect>
            <InnerShadow color="#8b5a2b33" radius="2"/>
         </effect>
      </PasswordField>

      <!-- Login button styled like a coffee shop button -->
      <Button layoutX="64.0" layoutY="156.0" mnemonicParsing="false" onAction="#login" text="Manager Login"
              style="-fx-background-color: radial-gradient(center 50% 50%, radius 60%, #8b5a2b, #5c4033); -fx-text-fill: #e6c9a8; -fx-font-weight: bold; -fx-background-radius: 5; -fx-border-color: #d4a373; -fx-border-width: 1; -fx-border-radius: 5;">
         <effect>
            <InnerShadow color="#1a120b" radius="3" />
         </effect>
      </Button>
   </children>
</AnchorPane>